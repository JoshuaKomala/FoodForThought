                                </div>  
                                <img class="ui avatar image" src="../public/images/restaurants_logo.png">
                                <div class="content" style="display:inline-block;">
                                  <div class="header" style="font-size: 18px; font-family: 'Rubik'; font-weight: 300;"> {{name}} </div>
                                </div>
                              </div> <!-- end LIST ITEM -->
                        {{/each}}
